{% extends "layout-admin.html.twig" %}

{% block header %}
{{ parent() }}
{% endblock %}

{% block main %}
<main>{{ dump(propertysByType) }}
    {% for property in propertysByType %}
    <article class="card  mb-sm-5" style="width: 25rem;">
        <img class="card-img-top" src="..." alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">{{ property.title }}</h5>
            <ul class="list-group list-group-flush">
                    <li class="list-group-item">{{ property.location.city }}</li>
                    <li class="list-group-item">{{ property.surface }} M²</li>
                    <li class="list-group-item">{{ property.rooms }} pièces</li>
                    <li class="list-group-item">{{ property.typeName }}</li>
                    <li class="list-group-item">Loyer {{ property.rentCharge }} €</li>
                    {% if prproperty.rentCharge is not null %}
                    <li class="list-group-item">Loyer: {{ property.rentCharge }} €</li>
                    {% endif %}
                    {% if property.salesPrice is not null %}
                    <li class="list-group-item">Prix de vente: {{ property.salesPrice }} €</li>
                    {% endif %}
            </ul>
            <a href="index.php?route=update-user&id={{ user.id }}" class="btn btn-primary">Modifier les informations</a>
        </div>
    </article>
    {% endfor %}
 
</main>
{% endblock %}




{% block footer %}
{% endblock %}

{% block script %}
{{ parent() }}
{% endblock %}