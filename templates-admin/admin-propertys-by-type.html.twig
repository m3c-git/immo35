{% extends "layout-admin.html.twig" %}

{% block header %}
{{ parent() }}
{% endblock %}

{% block main %}
<main>{{ dump(propertysByType) }}
    {% for property in propertysByType %}
    <article class="card  mb-sm-5" style="width: 25rem;">
        <img class="card-img-top" src="..." alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">{{ property.title }}</h5>
            <ul class="list-group list-group-flush">
                    <li class="list-group-item">{{ property.typeName }}</li>
                    <li class="list-group-item">{{ property.surface }}</li>
                    <li class="list-group-item">{{ property.city }}</li>
                    <li class="list-group-item">{{ property.role }}</li>
            </ul>
            <a href="index.php?route=update-user&id={{ user.id }}" class="btn btn-primary">Modifier les informations</a>
        </div>
    </article>
    {% endfor %}

 
</main>



{% endblock %}

{% block footer %}
{% endblock %}

{% block script %}
{{ parent() }}
{% endblock %}