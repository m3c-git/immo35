{% extends "layout.html.twig" %}

{% block contentHeadAdmin %}
<meta name="robots" content="noindex, nofollow">
<script src="./vendor/tinymce/tinymce/tinymce.min.js" referrerpolicy="origin"></script>
<script>
    tinymce.init({
      selector: 'textarea',
      menubar:false,
      statusbar: false,
      formats: {
        bold : {inline : 'b' },
