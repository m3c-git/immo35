    plugins: 'preview searchreplace autolink autosave save directionality fullscreen link insertdatetime advlist lists wordcount help emoticons ',
    toolbar: "undo redo | bold italic underline strikethrough | align numlist bullist | link | lineheight outdent indent| removeformat | emoticons | code fullscreen preview | print | insertdatetime | ltr rtl",
    toolbar_mode: 'wrap',
    //Pour la brise en compte style bol et italic sur le rendu final il faut rajouter des règle css pour les balise strong et em qui seront généré dans les fichiers de style correspondant",
    });
  </script>

{% endblock %}
