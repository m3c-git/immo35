{% extends "layout-admin.html.twig" %}

{% block header %}
{{ parent() }}
{% endblock %}

{% block main %}
<main class="container py-5">
    <h1>
        Mettre à jour les informations de 
    </h1>
    <form action='index.php?route=check-update-user' method="POST" class="mt-5">
        <input type="hidden" name="csrf-token" id="csrf-token" value="{{ session }}" />
        <input type="hidden" id="userId" name="userId" value="{{ get }}" />
        <fieldset>
            <label for="email" class="form-label">Email</label>
            <input type="email" id="email" name="email" class="form-control" value="{{ userById.email }}"/>
        </fieldset>
        <fieldset>
            <label for="password" class="form-label">Mot de passe</label>
            <input type="password" id="password" name="password" class="form-control" value="{{ userById.password }}"/>
        </fieldset>
        <fieldset>
            <label for="firstName" class="form-label">Prénom</label>
            <input type="text" id="firstName" name="firstName" class="form-control" value="{{ userById.firstName }}"/>
        </fieldset>
        <fieldset>
            <label for="lastName" class="form-label">Nom</label>
            <input type="text" id="lastName" name="lastName" class="form-control" value="{{ userById.lastName }}"/>
        </fieldset>
        <button type="submit" class="mt-3 btn btn-primary">Sauvegarder</button>
    </form>
</main>
    
{% endblock %}

{% block footer %}
{% endblock %}

