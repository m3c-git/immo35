{% extends "layout.html.twig" %}

{% block title %} Accueil {% endblock %}

{% block main %}



<main>

    <section class="home-main-header">
    <figure>
        <img src="./assets/img/background-home-page-main-header.webp" alt="background-home-page-main-header">
    </figure>
    <article>
    <h1 class="title-home">oui pour votre chez vous !</h1>
    <form action="index.php?route=result&typeMedia=vignette" method="post">
        
        <fieldset>
            <label for="status">Status</label>
            <select name="status" id="status">
                <option value="A LOUER">Louer</option>
                <option value="A VENDRE">Acheter</option>
            </select>
        </fieldset>
        <fieldset>
            <label for="type">Types de propriété</label>
            <select class="" id="type" name="type">
                <option selected value="" disabled>Type</option>
                {% for type in allType  %}
                <option value="{{ type.typeName }}">{{ type.typeName }}</option>
                {% endfor %}
            </select>
        </fieldset>
        <fieldset>
            <label for="location">Ville</label>
            <select class="" id="location" name="location">
                <option selected value="" disabled>Localisation</option>
                {% for location in allLocation  %}
                <option value="{{ location.city }}">{{ location.city }}</option>
                {% endfor %}
            </select>
        </fieldset>
        <button class="btn-front btn-home" type="submit">Voir les biens</button>
    </form>
    </article>
    
</section>
<section class="container card-section">
    <h2>Location à la une</h2>
    {% for property in propertysRent %}    

    <article class="card">
        <div class="card-body">
            <h3 class=""><a href="index.php?route=details-property&id={{ property.property.id }}">{{ property.property.title }}</a></h3>
            <ul class="">
                    <li><span>{{ property.property.location.city }}</span></li>
                    <li><strong>{{ property.property.surface }} m²</strong></li>
                    {% if property.property.rooms != null or property.property.rooms != 0 %}
                    <li><strong>{{ property.property.rooms }} pièces</strong></li>
                    {% endif %} 
                    {% if property.property.rentCharge != null or property.property.rentCharge != 0 %}
                    <li class="price-card"><strong>{{ property.property.rentCharge }} €</strong></li>
                    {% endif %}                    
                    {% if property.property.salesPrice != null or property.property.salesPrice != 0 %}
                    <li class="price-card"><strong>{{ property.property.salesPrice | number_format(0, '', ' ') }} €</strong></li>
                    {% endif %}
            </ul>
            <figure>
                <img src='{{  "./upload/" ~ property.vignette_url }}' alt="{{ property.property.title }}">
            </figure>
        </div>
    </article>
   
    {% endfor %}
</section>
<section class="container card-section">
    <h2>Vente à la une</h2>
    {% for property in propertysBuy %}    

    <article class="card" style="width: 25rem;">
        <div class="card-body">
            <h3><a href="index.php?route=details-property&id={{ property.property.id }}">{{ property.property.title }}</a></h3>
            <ul>
                    <li><span>{{ property.property.location.city }}</span></li>
                    <li><strong>{{ property.property.surface }} m²</strong></li>
                    {% if property.property.rooms != null or property.property.rooms != 0 %}
                    <li><strong>{{ property.property.rooms }} pièces</strong></li>
                    {% endif %} 
                    {% if property.property.rentCharge != null or property.property.rentCharge != 0 %}
                    <li class="price-card"><strong>{{ property.property.rentCharge }} €</strong></li>
                    {% endif %}                    
                    {% if property.property.salesPrice != null or property.property.salesPrice != 0 %}
                    <li class="price-card"><strong>{{ property.property.salesPrice | number_format(0, '', ' ') }} €</strong></li>
                    {% endif %}
            </ul>
            <figure>
                <img src='{{  "./upload/" ~ property.vignette_url }}' alt="{{ property.property.title }}">
            </figure>
        </div>
    </article>
   
    {% endfor %}
</section>
   
</main>
    
{% endblock %}

