{% extends "layout.html.twig" %}

{% block bootstrap %}
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"> -->
{% endblock %}
    {% block main %}
    <main id="login" class="container">
    
        {% if errormessage is defined %}
      
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{ errormessage }} 
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            {% endif %}
        <h1 class="mb-5">Espace de gestion Immo35</h1>
    
        <form id="login-form" action="index.php?route=check-login" method="post">
            <h2 class="mt-5">Connexion</h2>
            <input type="hidden" name="csrf-token" id="csrf-token" value="{{ token }}" />
            <fieldset class="my-1">
                <label for="email" class="form-label">
                    Email
                </label>
                <input type="email" name="email" id="email" class="form-control"/>
            </fieldset>
            <fieldset class="my-1">
                <label for="password" class="form-label">
                    Password
                </label>
                <input type="password" name="password" id="password" class="form-control" />
            </fieldset>
            <button type="submit" class="btn btn-login" >Connexion</button>
        </form>
    </main>
    {% endblock %}




